{
  "name": "todo-app",
  "version": "1.0.0",
  "author": "Jonathan Galdino <jonathangaldino@users.noreply.github.com>",
  "private": true,
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=18.16.0"
  },
  "workspaces": [
    "apps/server",
    "packages/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "eslint '**/*.{ts,tsx}'",
    "test": "turbo run test"
  },
  "devDependencies": {
    "dotenv": "^16.0.1",
    "tsconfig-paths": "^4.0.0",
    "turbo": "^1.4.3",
    "typescript": "5.0.4"
  },
  "jest": {
    "rootDir": ".",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist",
      "<rootDir>/build",
      "<rootDir>/node_modules/"
    ]
  },
  "packageManager": "yarn@3.2.3"
}
