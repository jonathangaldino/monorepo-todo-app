{
  "name": "todo-app",
  "version": "1.0.0",
  "author": "Jonathan Galdino <jonathangaldino@users.noreply.github.com>",
  "private": true,
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=18.16.0"
  },
  "workspaces": [
    "apps/server",
    "packages/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "eslint '**/*.{ts,tsx}'",
    "test": "turbo run test",
    "server:dev": "yarn workspace @core/server dev",
    "schemas:gen": "yarn workspace @core/schemas codegen"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.18",
    "turbo": "^1.4.3",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@ruanmartinelli/prettier-config": "^1.0.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/node-fetch": "^2.6.4",
    "concurrently": "^7.2.2",
    "dotenv": "^16.0.1",
    "eslint": "^7.32",
    "eslint-plugin-import": "2.26",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-tsdoc": "^0.2.16",
    "jest": "^29.3.1",
    "prettier": "^2.8.8",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0"
  },
  "jest": {
    "rootDir": ".",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist",
      "<rootDir>/build",
      "<rootDir>/node_modules/"
    ]
  },
  "packageManager": "yarn@3.2.3"
}
