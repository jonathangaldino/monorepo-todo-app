// Turn "noEmit" on when using this.
{
  "compilerOptions": {
    "baseUrl": ".", // Required for running jest.
    // "rootDir": ".",
    // "module": "commonjs",
    // "target": "es2019",
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "sourceMap": true,
    "outDir": "build",
    "noImplicitReturns": true,
    "allowUnreachableCode": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    // Toggle this on-off to get rid of pesky errors while compiling.
    "noImplicitAny": false,
    "declaration": true,
    "lib": [
      "es2020",
    ],
    "strictPropertyInitialization": false,
    "noUnusedLocals": false,
    // This has uncovered a lot of bugs.
    "noImplicitOverride": true,
    "noEmitOnError": true,
    "declarationMap": true,
    // "isolatedModules": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/build",
  ]
}