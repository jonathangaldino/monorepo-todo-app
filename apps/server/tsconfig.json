{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["./tests/*"],
      "@modules/*": ["./src/modules/*"] 
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/build"
  ]
}
