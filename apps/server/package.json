{
  "name": "@apps/server",
  "packageManager": "yarn@3.2.3",
  "private": true,
  "scripts": {
    "prepare": "yarn prisma generate",
    "db:migrate": "prisma migrate deploy",
    "start": "node --enable-source-maps build/index.js",
    "build": "rm -rf build && tsc",
    "dev-build": "tsc && tsc -w",
    "dev-serve": "PORT=4000 nodemon --watch ./build/ --exec yarn start",
    "dev": "concurrently \"yarn dev-build\" \"yarn dev-serve\""
  },
  "dependencies": {
    "@core/essentials": "workspace:packages/essentials",
    "@core/schemas": "workspace:packages/schemas",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^4.14.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-http": "^1.18.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "prisma": "^4.14.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  },
  "prisma": {
    "schema": "./src/database/schema.prisma"
  }
}
